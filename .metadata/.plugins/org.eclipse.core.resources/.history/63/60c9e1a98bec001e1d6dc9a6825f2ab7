package br.com.senaisp.bauru.felipe.licao07.exemplos;

public class Exemplo01 {

	public static void main(String[] args) {
		ContaBancaria c1 = new ContaBancaria();
		c1.agencia = 341;
		c1.banco = 341;
		c1.numeroConta = 12345;
		c1.saldo = -10;
		ContaBancaria c2 = c1;
		System.out.println(c1.saldo);
		c2.saldo = 50;
		System.out.println(c1.saldo);
		adicionarValor(c1,100.00);
		System.out.println(c1.saldo);
		
	}

	private static void adicionarValor(ContaBancaria ca1, double d) {
		ca1.saldo += d;
		// seria a mesma coisa que cal.saldo = cal.saldo + d;
	}

}
